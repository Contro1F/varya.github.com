<!doctype html>
<html class='no-js' lang=''>
    <head>
        <title>Isomorphic Example</title>
    </head>
    <body>
        <div id='contents'><div><h1></h1><div><div class="article" role="main">
    <!--<div class="article__body box__body">
        <h1 class="article__header"><%- @document.title %></h1>
    </div>-->
    <%- @content %>
    <% for post in @getCollection("life").findAll({lang: @document.lang}, [{date:-1}]).toJSON(): %>
        <div class="article__body box__body">
            <h2 class="article__header">
              <a href="<%= post.url %>" class="article__header-link">
                  <%= post.title %>
              </a>
            </h2>
        </div>
        <div class="article__text box__island articles-list__item">
            <em class="published">
                <%= @moment(post.date).format('Do MMMM YYYY') %>
            </em>
            <%- @cuttedContent(post.contentRenderedWithoutLayouts) %>
        </div>
    <% end %>
<div>
</div></div></div>

        <script src='bundle.js'></script>
    </body>
</html>

